<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.maiatoday.geotaur">

    <application
        android:name=".TaurApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="AIzaSyA5Y54k2tpAqBP2QR5l_jYn9LNz9wklbQg" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA5Y54k2tpAqBP2QR5l_jYn9LNz9wklbQg" />

        <receiver
            android:name=".location.ActivityTriggerReceiver"
            android:enabled="false"
            android:exported="true">
            <intent-filter>
                <action android:name="${applicationId}.ACTION_RECEIVE_ACTIVITY" />
            </intent-filter></receiver>
        <receiver
            android:name=".location.GeofenceTriggerReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="${applicationId}.ACTION_RECEIVE_GEOFENCE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>