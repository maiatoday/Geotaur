<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.maiatoday.geotaur" >

    <application
        android:name=".TaurApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <service
            android:name=".location.ActivityDetectUpdateService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".location.ActivityDetectTriggerIntentService"
            android:exported="false" />
        <receiver android:name=".location.GeofenceTriggerReceiver"
            android:exported="false">
            <intent-filter >
                <action android:name="${applicationId}.ACTION_RECEIVE_GEOFENCE"/>
            </intent-filter>
        </receiver>
        <service
            android:name=".location.GeofenceUpdateIntentService"
            android:exported="false" />
    </application>

</manifest>